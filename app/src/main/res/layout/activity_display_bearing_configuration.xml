<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@color/purple_700"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/display_configuration"
            android:textSize="28sp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
       android:padding="5dp"
        android:id="@+id/ll_TextView_machine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:text="@string/site"
            android:textSize="@dimen/textSize2"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content" />

        <TextView
            android:textSize="@dimen/textSize2"
            android:id="@+id/site"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>
    <LinearLayout
       android:padding="5dp"
        android:id="@+id/ll_machine_number"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/machine_number"
            android:textSize="@dimen/textSize2"
            android:textColor="#000000"
            android:layout_marginStart="30dp" />
        <TextView
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/deviceId"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textSize2"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp" />
    </LinearLayout>
    <LinearLayout
       android:padding="5dp"
        android:id="@+id/ll_TextView_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:textSize="@dimen/textSize2"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content" />

        <TextView
            android:textSize="@dimen/textSize2"
            android:id="@+id/type"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>
    <LinearLayout
       android:padding="5dp"
        android:id="@+id/ll_sensor_x1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/sensor_x1"
            android:textSize="@dimen/textSize2"
            android:textColor="#000000"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/sensor_x1"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textSize2"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>
    <LinearLayout
       android:padding="5dp"
        android:id="@+id/ll_sensor_x2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/sensor_x2"
            android:textSize="@dimen/textSize2"
            android:textColor="#000000"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/sensor_x2"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textSize2"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>
        <LinearLayout
                android:padding="5dp"
                android:id="@+id/ll_bearing_arg1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="@string/bearing_arg1"
                    android:textSize="@dimen/textSize2"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/bearing_arg1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/textSize2"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:id="@+id/ll_bearing_arg2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content" 
                    android:text="@string/bearing_bush"
                    android:textSize="@dimen/textSize2"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/bearing_arg2"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/textSize2"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:id="@+id/ll_bearing_arg3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="@string/bearing_arg3"
                    android:textSize="@dimen/textSize2"
                    android:textColor="#000000"/>

                <EditText
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/bearing_arg3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/textSize2"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:id="@+id/ll_bearing_arg4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="@string/bearing_arg4"
                    android:textSize="@dimen/textSize2"
                    android:textColor="#000000"/>

                <EditText
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/bearing_arg4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/textSize2"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:id="@+id/ll_bearing_arg5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="@string/bearing_arg5"
                    android:textSize="@dimen/textSize2"
                    android:textColor="#000000"/>

                <EditText
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/bearing_arg5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/textSize2"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:id="@+id/ll_bearing_arg6"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="@string/bearing_arg6"
                    android:textSize="@dimen/textSize2"
                    android:textColor="#000000"/>
                <EditText
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/bearing_arg6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/textSize2"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/finish"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
</layout>